{
    "name": "stayallive/laravel-mail-css-inliner",
    "description": "Inline the CSS of your Laravel HTML emails.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "laravel-package",
        "mailer",
        "css"
    ],
    "authors": [
        {
            "name": "Alex Bouma",
            "email": "me@alexbouma.me"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "illuminate/mail": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Stayallive\\LaravelMailCssInliner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stayallive\\LaravelMailCssInliner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Stayallive\\LaravelMailCssInliner\\ServiceProvider"
            ]
        }
    }
}
